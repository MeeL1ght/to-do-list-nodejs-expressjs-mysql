<%- include('partials/head', {
  lang,
  title,
  iconUrl,
  extensionIconType
}) 
%>
    <!-- CSS -->
    <link rel="stylesheet" href="./css/partials/normalize.css">
    <!-- Bootstrapt 5.1 -->
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
    >
    <link rel="stylesheet" href="./css/styles/index.css">
  </head>

  <body>

    <!-- Spinner -->
    <div class="spinner-border text-success spinner-body no-select" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>

    <div class="no-select" id="content">
    <%- include('partials/navbar', { routes }) %>

      <div class="container mb-5">
        <main role="main">
          <h1 class="text-center title font-monospace fs-2 mb-5">
            Welcome
            <span class="important-text-title fw-bold">to</span>
            the
            <span class="important-text-title fw-bold">To-Do List</span>
            <i class="fas fa-check text-success"></i> App
          </h1>

          <!-- parent-card -->
          <div class="card parent-card">
            
            <!-- row 1 -->
            <div class="row justify-content-center align-items-center">

              <!-- card 1 -->
              <div class="card child-card mt-5 text-center">
                <div class="card-body">
                  <a href="<%= routes.create %>">
                    <i class="fas fa-plus-circle create-icon-index mt-2"></i>
                  </a>
                  <h5 class="card-title mt-3">
                    Create a new
                    <a href="<%= routes.create %>" class="text-decoration-none">
                      <span class="task-text-card">Task</span>
                    </a>
                  </h5>
                </div> <!-- /card-body -->
              </div> <!-- /card 1 -->
             
              <!-- card 2 --> 
              <div class="card child-card mt-5 text-center ms-5">
                <div class="card-body">
                  <a href="<%= routes.read %>">
                    <i class="fas fa-list-ul read-icon-index mt-2"></i>
                  </a>
                  <h5 class="card-title mt-3">
                    Read all
                    <a href="<%= routes.read %>" class="text-decoration-none d-block">
                      <span class="task-text-card">Tasks</span>
                    </a>
                  </h5>
                </div> <!-- /card-body -->
              </div> <!-- /card 2 -->
            </div> <!-- /row 1 -->
  
            <!-- row 2 -->
            <div class="row justify-content-center align-items-center mt-4">
  
              <!-- card 3 -->
              <div class="card child-card mt-2 mb-5 text-center">
                <div class="card-body">
                  <a href="<%= routes.read %>">
                    <i class="fas fa-edit update-icon-index mt-2"></i>
                  </a>
                  <h5 class="card-title mt-3">
                    Update a
                    <a href="<%= routes.read %>" class="text-decoration-none d-block">
                      <span class="task-text-card">Task</span>
                    </a>
                  </h5>
                </div> <!-- /card-body -->
              </div> <!-- /card 3 -->
             
              <!-- card 4 --> 
              <div class="card child-card mt-2 mb-5 text-center ms-5">
                <div class="card-body">
                  <a href="<%= routes.read %>">
                    <i class="fas fa-redo delete-icon-index mt-2"></i>
                  </a>
                  <h5 class="card-title mt-3">
                    Change status
                    <a href="<%= routes.read %>" class="text-decoration-none d-block">
                      <span class="task-text-card">Task</span>
                    </a>
                  </h5>
                </div> <!-- /card-body -->
              </div> <!-- /card 4 -->
            </div> <!-- /row 2 -->

          </div> <!-- /parent-card -->
        </main>
      </div> <!-- /container -->
    </div> <!-- /content -->

    <%- include('partials/footer') %>

    <!-- Scripts -->
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous">
    </script>
    <script
    src="https://kit.fontawesome.com/c510dd205e.js"
    crossorigin="anonymous">
    </script>
    <script src="./../js/pages/index.js"></script>

  <body>
</html>
